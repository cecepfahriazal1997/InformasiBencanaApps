<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:stateListAnimator="@null"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:paddingTop="16dp"
            android:paddingRight="32dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplay_medium"
                        android:text="ID Pasien"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sfprodisplay_bold"
                        android:text="4/Aug/2011"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplay_medium"
                        android:text="Nama Pasien"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sfprodisplay_bold"
                        android:text="Rivo Rivanto"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplay_medium"
                        android:text="Jenis Kelamin"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sfprodisplay_bold"
                        android:text="Laki-laki"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplay_medium"
                        android:text="Umur"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sfprodisplay_bold"
                        android:text="24 Tahun"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplay_medium"
                        android:text="Tipe Riwayat"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTypeRecord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:foreground="?attr/selectableItemBackground"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardElevation="0dp"
                        card_view:cardPreventCornerOverlap="false"
                        card_view:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp">

                            <TextView
                                android:id="@+id/typeRecord"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfprodisplay_regular"
                                android:text="Pilih Tipe Riwayat"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="16dp" />

                            <com.mikepenz.iconics.view.IconicsImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                app:iiv_color="@color/colorGray"
                                app:iiv_icon="gmd-keyboard-arrow-right" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/typeRecord"
                                android:layout_marginTop="8dp"
                                android:background="@color/colorTransparentGray" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplay_medium"
                        android:text="Tipe Gejala"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSymptom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:foreground="?attr/selectableItemBackground"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardElevation="0dp"
                        card_view:cardPreventCornerOverlap="false"
                        card_view:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp">

                            <TextView
                                android:id="@+id/symptom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfprodisplay_regular"
                                android:text="Pilih Gejala"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="16dp" />

                            <com.mikepenz.iconics.view.IconicsImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                app:iiv_color="@color/colorGray"
                                app:iiv_icon="gmd-keyboard-arrow-right" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/symptom"
                                android:layout_marginTop="8dp"
                                android:background="@color/colorTransparentGray" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplay_medium"
                        android:text="Gejala Spesifik"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSpesific"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:foreground="?attr/selectableItemBackground"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardElevation="0dp"
                        card_view:cardPreventCornerOverlap="false"
                        card_view:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp">

                            <TextView
                                android:id="@+id/spesific"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfprodisplay_regular"
                                android:text="Pilih Gejala Spesifik"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="16dp" />

                            <com.mikepenz.iconics.view.IconicsImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                app:iiv_color="@color/colorGray"
                                app:iiv_icon="gmd-keyboard-arrow-right" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/spesific"
                                android:layout_marginTop="8dp"
                                android:background="@color/colorTransparentGray" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplay_medium"
                        android:text="Hubungan Keluarga"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRelationship"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:foreground="?attr/selectableItemBackground"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardElevation="0dp"
                        card_view:cardPreventCornerOverlap="false"
                        card_view:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp">

                            <TextView
                                android:id="@+id/relationship"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfprodisplay_regular"
                                android:text="Pilih Hubungan"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="16dp" />

                            <com.mikepenz.iconics.view.IconicsImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                app:iiv_color="@color/colorGray"
                                app:iiv_icon="gmd-keyboard-arrow-right" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/relationship"
                                android:layout_marginTop="8dp"
                                android:background="@color/colorTransparentGray" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplay_medium"
                        android:text="Kondisi Umum"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/condition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_outline_white"
                        android:editable="false"
                        android:focusable="false"
                        android:fontFamily="@font/sfprodisplay_regular"
                        android:hint="Masukan Kondisi Khusus ..."
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp"
                        android:singleLine="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplay_medium"
                        android:text="Kondisi Khusus"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/spesificCondition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_outline_white"
                        android:editable="false"
                        android:focusable="false"
                        android:fontFamily="@font/sfprodisplay_regular"
                        android:hint="Masukan Kondisi Khusus ..."
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp"
                        android:singleLine="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sfprodisplay_medium"
                android:text="Laboratorium"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/lab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_outline_white"
                android:fontFamily="@font/sfprodisplay_regular"
                android:hint="Masukan Nama Pasien ..."
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sfprodisplay_medium"
                android:text="Radiologi"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardRadiologi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:foreground="?attr/selectableItemBackground"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="0dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/radiologi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplay_regular"
                        android:text="Pilih Radiologi"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="16dp" />

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:iiv_color="@color/colorGray"
                        app:iiv_icon="gmd-keyboard-arrow-right" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/radiologi"
                        android:layout_marginTop="8dp"
                        android:background="@color/colorTransparentGray" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sfprodisplay_medium"
                android:text="Diagnosa"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDiagnostic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:foreground="?attr/selectableItemBackground"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="0dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/diagnostic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplay_regular"
                        android:text="Pilih Diagnosa"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="16dp" />

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:iiv_color="@color/colorGray"
                        app:iiv_icon="gmd-keyboard-arrow-right" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/diagnostic"
                        android:layout_marginTop="8dp"
                        android:background="@color/colorTransparentGray" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sfprodisplay_medium"
                android:text="Terapi"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTherapic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:foreground="?attr/selectableItemBackground"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="0dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/therapic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplay_regular"
                        android:text="Pilih Terapi"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="16dp" />

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:iiv_color="@color/colorGray"
                        app:iiv_icon="gmd-keyboard-arrow-right" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/therapic"
                        android:layout_marginTop="8dp"
                        android:background="@color/colorTransparentGray" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sfprodisplay_medium"
                android:text="Rehabilitas"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardRehability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:foreground="?attr/selectableItemBackground"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="0dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/rehability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplay_regular"
                        android:text="Pilih Rehabilitas"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="16dp" />

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:iiv_color="@color/colorGray"
                        app:iiv_icon="gmd-keyboard-arrow-right" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/rehability"
                        android:layout_marginTop="8dp"
                        android:background="@color/colorTransparentGray" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sfprodisplay_medium"
                android:text="Keterangan"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_outline_white"
                android:fontFamily="@font/sfprodisplay_regular"
                android:gravity="top"
                android:hint="Masukan Keterangan ..."
                android:lines="4"
                android:maxLines="4"
