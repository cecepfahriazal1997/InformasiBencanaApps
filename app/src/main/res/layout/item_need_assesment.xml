<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/date"
                android:fontFamily="@font/sfprodisplay_medium"
                android:text="Specialist Doctor"
                android:textColor="@color/colorGrayDark2"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/sfprodisplay_regular"
                android:text="24 September 2019"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/need"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/sfprodisplay_light"
                android:text="Place : Nurse"
                android:textColor="@color/colorGrayDark2"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/medical_equipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/action"
                android:fontFamily="@font/sfprodisplay_light"
                android:text="Medical Equipment : Related Transportation"
                android:textColor="@color/colorGrayDark"
                android:layout_alignParentStart="true"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btnEdit"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="4dp"
                    fancy:fb_defaultColor="@color/colorYellow"
                    fancy:fb_focusColor="@color/colorYellowDark"
                    fancy:fb_fontIconResource="&#xf044;"
                    fancy:fb_fontIconSize="24dp"
                    fancy:fb_radius="4dp"
                    fancy:fb_text=""
                    fancy:fb_textSize="16dp" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btnDelete"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="4dp"
                    fancy:fb_defaultColor="@color/colorRed"
                    fancy:fb_focusColor="@color/colorRedDark"
                    fancy:fb_fontIconResource="&#xf1f8;"
                    fancy:fb_fontIconSize="24dp"
                    fancy:fb_radius="4dp"
                    fancy:fb_text=""
                    fancy:fb_textSize="16dp" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>